  box-shadow: 0px 0px 0px 1px #ededed, 0px 2px 10px #ededed; }
  .navigation__logo {
    line-height: 2; }
  .navigation__actions {
    padding: 0.5rem 0;
    display: flex;
    flex-direction: row;
    justify-content: space-around; }
    .navigation__actions .link, .navigation__actions .section__actions .section__link, .section__actions .navigation__actions .section__link, .navigation__actions .hero__link, .navigation__actions .footer__section .footer__link, .footer__section .navigation__actions .footer__link {
      font-size: 0.75rem; }
    .navigation__actions li {
      display: inline-block; }
  .navigation__item {
    padding: 0.5rem 1rem;
    transition: background-color 200ms ease-in, color 200ms ease-in;
    color: #3346ae; }
    .navigation__item.active, .navigation__item:hover {
      background-color: #f5f5f5;
      color: #243280; }
    .navigation__item .link, .navigation__item .section__actions .section__link, .section__actions .navigation__item .section__link, .navigation__item .hero__link, .navigation__item .footer__section .footer__link, .footer__section .navigation__item .footer__link {
      color: inherit; }

.section {
  padding: 1rem; }
  .section__title {
    font-weight: 600;
    font-size: 1.125rem; }
  .section__actions .section__link {
    text-align: center;
    border: 2px solid #eee;
    margin: 1rem 0.5rem;
    padding: 1rem;
    border-radius: 8px;
    font-size: 0.9rem;
    display: block; }
    .section__actions .section__link:hover {
