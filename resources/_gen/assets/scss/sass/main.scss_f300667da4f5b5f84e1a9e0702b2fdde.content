.objective {
  display: flex;
  flex-direction: row;
  padding: 1rem;
  background-color: #f0f0f0;
  border-radius: 8px;
  justify-content: space-between;
  align-items: center; }
  .objective__title {
    flex-basis: 25ch;
    flex-grow: 0; }
  .objective__description {
    font-size: 0.9rem;
    flex-grow: 1;
    text-align: right; }
  .section .objective {
    margin-top: 0.5rem; }

.card {
  display: flex;
  flex-direction: row;
  border-radius: 8px;
  padding: 0.5rem;
  overflow: hidden; }
  .card__image {
    flex-basis: 150px;
    flex-grow: 0;
    flex-shrink: 0;
    order: 0;
    border-radius: 8px; }
  .card__content {
    flex-grow: 1;
    padding: 0 0.5rem;
    display: flex;
    flex-direction: column; }
    .card__content > * {
      margin-bottom: 0.25rem; }
  .card__title {
    order: 0; }
  .card__date {
    order: 1; }
  .card__description {
    order: 2;
    font-size: 0.8rem;
    color: #333;
    line-height: 1.5; }
    .card__description .link, .card__description .section__actions .section__link, .section__actions .card__description .section__link, .card__description .hero__link, .card__description .footer__section .footer__link, .footer__section .card__description .footer__link {
      text-transform: initial;
      display: block;
      font-size: inherit;
      font-weight: normal; }
  .section .card {
    margin-top: 1rem;
    min-height: 10rem; }

.hero {
  background-color: #ddd;
  padding: 1rem;
  min-height: 20rem; }
  .hero > * {
    max-width: 40rem; }
  .hero__title {
    font-size: 1.5rem;
    margin: 1rem 0; }
  .hero__description {
    font-size: 1.15rem;
    margin: 1rem 0; }
  .hero__actions {
    text-align: right; }

.footer {
